#!/bin/bash
#
read -p "Nombre enter: " num
#Aquesta opció -gt mirem que el numero sigui més gran que 0
if [ $num -gt '0' ]
then

	echo "El nombre és positiu"
 
#Aquesta opció -lt mirem que el numero sigui més petit que 0
elif [ $num -lt '0' ]
then

	echo "El nombre és negatiu"
 
else

	echo "El nombre és 0"
 
fi
